<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<sbe:messageSchema xmlns:sbe="http://fixprotocol.io/2016/sbe"
                   package="io.aeron.archiver.codecs"
                   id="1"
                   version="0"
                   semanticVersion="5.2"
                   description="Message Codecs for communicating with the Archiver"
                   byteOrder="littleEndian">
    <types>
        <composite name="messageHeader" description="Message identifiers and length of message root">
            <type name="blockLength" primitiveType="uint16"/>
            <type name="templateId"  primitiveType="uint16"/>
            <type name="schemaId"    primitiveType="uint16"/>
            <type name="version"     primitiveType="uint16"/>
        </composite>
        <composite name="groupSizeEncoding" description="Repeating group dimensions">
            <type name="blockLength" primitiveType="uint16"/>
            <type name="numInGroup"  primitiveType="uint16"/>
        </composite>
        <composite name="varStringEncoding">
            <type name="length"  primitiveType="uint32" maxValue="1073741824"/>
            <type name="varData" primitiveType="uint8" length="0" characterEncoding="US-ASCII"/>
        </composite>
    </types>

    <sbe:message name="ArchiveStartedNotification"
                 id="101"
                 description="Describes a new stream instance">
        <field name="persistedImageId"    id="1" type="int32" />
        <field name="sessionId"           id="2" type="int32" />
        <field name="streamId"            id="3" type="int32" />
        <data  name="source"              id="4" type="varStringEncoding" />
        <data  name="channel"             id="5" type="varStringEncoding" />
    </sbe:message>

    <sbe:message name="ArchiveProgressNotification"
                 id="102"
                 description="Archival progress notification">
        <field name="persistedImageId"    id="1" type="int32" />
        <field name="initialTermId"       id="2" type="int32" />
        <field name="initialTermOffset"   id="3" type="int32" />
        <field name="termId"              id="4" type="int32" />
        <field name="termOffset"          id="5" type="int32" />
    </sbe:message>

    <sbe:message name="ArchiveStoppedNotification"
                 id="103"
                 description="Archival termination notification">
        <field name="persistedImageId"    id="1" type="int32" />
    </sbe:message>

    <sbe:message name="ArchiverResponse"
                 id="1"
                 description="Generic response. Empty error is an OK response">
        <field name="correlationId"       id="1" type="int32" />
        <data  name="err"                 id="2" type="varStringEncoding" />
    </sbe:message>

    <sbe:message name="ArchiveStartRequest"
                 id="2"
                 description="Request a channel:stream be archived">
        <field name="correlationId"       id="1" type="int32" />
        <field name="streamId"            id="2" type="int32" />
        <data  name="channel"             id="3" type="varStringEncoding" />
    </sbe:message>

    <sbe:message name="ArchiveStopRequest"
                 id="3"
                 description="Request a channel:stream stop archiving">
        <field name="correlationId"       id="1" type="int32" />
        <field name="streamId"            id="2" type="int32" />
        <data  name="channel"             id="3" type="varStringEncoding" />
    </sbe:message>

    <sbe:message name="ReplayRequest"
                 id="4"
                 description="Replay archive range request">
        <field name="correlationId"        id="1" type="int32" />
        <field name="persistedImageId"     id="2" type="int32" />
        <field name="termId"               id="3" type="int32" />
        <field name="termOffset"           id="4" type="int32" />
        <field name="length"               id="5" type="int64" />
        <field name="replayStreamId"       id="6" type="int32" />
        <data  name="replayChannel"        id="7"  type="varStringEncoding" />
    </sbe:message>

    <sbe:message name="ReplayStarted"
                 id="41"
                 description="Abort replay" >
        <field name="correlationId"      id="1" type="int32" />
        <field name="replayId"           id="2" type="int32" />
    </sbe:message>

    <sbe:message name="AbortReplayRequest"
                 id="5"
                 description="Abort replay" >
        <field name="correlationId"      id="1" type="int32" />
        <field name="replayId"           id="2" type="int32" />
    </sbe:message>

    <sbe:message name="ListStreamInstancesRequest"
                 id="6"
                 description="Request a range of stream instance archive descriptors">
        <field name="correlationId"        id="1" type="int32" />
        <field name="from"                 id="2" type="int32" />
        <field name="to"                   id="3" type="int32" />
    </sbe:message>

    <sbe:message name="ListStreamInstancesNotFoundResponse"
                 id="61"
                 description="Failed to find stream instance, also terminates query">
        <field name="correlationId"       id="1" type="int32" />
        <field name="persistedImageId"    id="2" type="int32" />
        <field name="maxPersistedImageId" id="3" type="int32" />
    </sbe:message>

    <sbe:message name="ArchiveDescriptor"
                 id="7"
                 description="Describes an archive in the meta file and index">
        <field name="persistedImageId"      id="1" type="int32"/>
        <field name="termBufferLength"      id="2" type="int32"/>
        <field name="startTime"             id="3" type="int64"/>
        <field name="initialTermId"         id="4" type="int32"/>
        <field name="initialTermOffset"     id="5" type="int32"/>
        <field name="lastTermId"            id="6" type="int32"/>
        <field name="lastTermOffset"        id="7" type="int32"/>
        <field name="endTime"               id="8" type="int64"/>
        <field name="imageInitialTermId"    id="9" type="int32"/>
        <field name="sessionId"             id="10" type="int32"/>
        <field name="streamId"              id="11" type="int32"/>
        <field name="archiveFileSize"       id="12" type="int32"/>
        <field name="correlationId"         id="13" type="int32" />
        <data  name="source"                 id="14" type="varStringEncoding"/>
        <data  name="channel"                id="15" type="varStringEncoding"/>
    </sbe:message>

    <sbe:message name="ArchiverClientInit"
                 id="8"
                 description="Setup message for client establish a back channel for replies" >
        <field name="replyStreamId"        id="1" type="int32" />
        <data  name="replyChannel"         id="2" type="varStringEncoding" />
    </sbe:message>
</sbe:messageSchema>
